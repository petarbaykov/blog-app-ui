<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CategoriesActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="15dp"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:orientation="vertical"
                android:background="#000"
                android:id="@+id/techCategory">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/travel"
                    android:alpha="0.7"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:textColor="#fff"
                    android:text="Travel"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                style="@style/ArticleRow">
                <RelativeLayout
                   style="@style/CategoryBox"
                    android:layout_marginRight="5dp">
                    <ImageView
                        style="@style/CategoryBoxImage"
                        android:src="@mipmap/health"/>
                    <TextView
                        style="@style/CategoryBoxText"
                        android:text="Health"/>
                </RelativeLayout>
                <RelativeLayout
                    style="@style/CategoryBox"
                    android:layout_marginLeft="5dp">
                    <ImageView
                        style="@style/CategoryBoxImage"
                        android:src="@mipmap/food"/>
                    <TextView
                        style="@style/CategoryBoxText"
                        android:text="Food"/>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                style="@style/ArticleRow">
                <RelativeLayout
                    style="@style/CategoryBox"
                    android:layout_marginRight="5dp">
                    <ImageView
                        style="@style/CategoryBoxImage"
                        android:src="@mipmap/tech"/>
                    <TextView
                        style="@style/CategoryBoxText"
                        android:text="Tech"/>
                </RelativeLayout>

                <RelativeLayout
                    style="@style/CategoryBox"
                    android:layout_marginLeft="5dp">

                    <ImageView
                        style="@style/CategoryBoxImage"
                        android:src="@mipmap/politics"/>
                    <TextView
                        style="@style/CategoryBoxText"
                        android:text="Politics"/>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>